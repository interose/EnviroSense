{% extends 'baseLogin.html.twig' %}

{% block body %}
    <main class="form-signin w-100 m-auto">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-floating">
                <input type="text" value="" class="form-control" name="_username" id="username" autocomplete="username" required autofocus placeholder="name@example.com">
                <label for="username">Username</label>
            </div>
            <div class="form-floating">
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="••••••••">
                <label for="password">Password</label>
            </div>

            <div class="form-check text-start my-3">
                <input id="remember" name="_remember_me" type="checkbox" class="form-check-input">
                <label class="form-check-label" for="remember">
                    Remember me
                </label>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
    </main>
{% endblock %}
